{
  "compilerOptions": {
    "declaration": true,
    "emitDeclarationOnly": true,
    "target": "esnext",
    "strict": true,
    "isolatedModules": true,
    "allowJs": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "outDir": "./es",
    "rootDir": "./src"
  },
  "include": [
    "src/**/*"
  ]
}
